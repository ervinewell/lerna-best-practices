{
  "lerna": "2.7.0",
  "version": "independent",
  "changelog": {
    "repo": "ervinewell/lerna-best-practices",
    "labels": {
      "feat": ":rocket: New Feature",
      "fix": ":bug: Bug Fix",
      "perf": "Optimization",
      "docs": ":memo: Documentation"   
    },
    "cacheDir": ".changelog"
  },
  "packages": [
    "packages/*"
  ],
  "commands": {
    "publish": {
      "message": "chore(release): publish %v"
    }
  }
}
